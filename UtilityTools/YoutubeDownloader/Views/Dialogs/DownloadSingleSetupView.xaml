<UserControl
    x:Class="YoutubeDownloader.Views.Dialogs.DownloadSingleSetupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:YoutubeDownloader.ViewModels.Dialogs"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/canton7/Stylet"
    MinWidth="500"
    d:DataContext="{d:DesignInstance Type=dialogs:DownloadSingleSetupViewModel}"
    Style="{DynamicResource MaterialDesignRoot}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            Margin="8,16,8,8"
            FontSize="19"
            Foreground="{DynamicResource PrimaryTextBrush}"
            Text="{Binding DisplayName}"
            TextTrimming="CharacterEllipsis"
            ToolTip="{Binding DisplayName}" />

        <!--  Author and upload date  -->
        <Grid Grid.Row="1" Margin="8,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                FontSize="15"
                Text="{Binding Video.Author}" />
            <TextBlock
                Grid.Column="2"
                FontSize="15"
                Text="{Binding Video.UploadDate, StringFormat=\{0:MMM d\, yyyy\}}" />
        </Grid>

        <Grid
            Grid.Row="2"
            Margin="0,8,0,0"
            HorizontalAlignment="Stretch"
            Background="Black">
            <!--  Thumbnail  -->
            <Image Source="{Binding Video.Thumbnails.MediumResUrl}" />

            <!--  Duration  -->
            <TextBlock
                Margin="0,0,8,6"
                Padding="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="Black"
                Foreground="{DynamicResource SecondaryInverseTextBrush}"
                Text="{Binding Video.Duration}" />
        </Grid>

        <Grid Grid.Row="3" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Download option  -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock
                    Margin="8,8,0,8"
                    VerticalAlignment="Center"
                    Text="Format:" />
                <ComboBox
                    MinWidth="150"
                    Margin="8"
                    VerticalAlignment="Center"
                    materialDesign:ComboBoxAssist.ShowSelectedItem="True"
                    IsReadOnly="True"
                    ItemsSource="{Binding AvailableDownloadOptions}"
                    SelectedItem="{Binding SelectedDownloadOption}" />
            </StackPanel>

            <!--  OK  -->
            <Button
                Grid.Column="2"
                Margin="8"
                Command="{s:Action Confirm}"
                Content="DOWNLOAD"
                IsDefault="True"
                Style="{DynamicResource MaterialDesignFlatButton}" />

            <!--  Cancel  -->
            <Button
                Grid.Column="3"
                Margin="8"
                Command="{s:Action Close}"
                Content="CANCEL"
                IsCancel="True"
                Style="{DynamicResource MaterialDesignFlatButton}" />
        </Grid>
    </Grid>
</UserControl>
